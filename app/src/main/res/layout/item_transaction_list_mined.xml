<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_xLarge_16dp">

    <View
        android:id="@+id/transaction_indicator"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/colorOffWhite"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="@dimen/margin_small_4dp"/>

    <include
        layout="@layout/item_transaction_list"
        app:layout_constraintStart_toEndOf="@id/transaction_indicator" />

</android.support.constraint.ConstraintLayout>