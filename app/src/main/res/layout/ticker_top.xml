<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimaryDark"
    android:padding="2dp"
    >

    <TextView
        android:id="@+id/market_summary_market_cap_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_4dp"
        android:text="MCap(ALL):"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/market_summary_market_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_4dp"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/market_summary_market_cap_title"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/market_summary_vol_24H_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small_4dp"
        android:text="Vol1D(ALL):"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toStartOf="@id/market_summary_vol_24H"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/market_summary_vol_24H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small_4dp"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/market_summary_1D_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_4dp"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/market_summary_1D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small_4dp"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/market_summary_1D_title"/>

    <TextView
        android:id="@+id/market_summary_1W_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small_4dp"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/market_summary_1W"/>

    <TextView
        android:id="@+id/market_summary_1W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small_4dp"
        android:textColor="@color/colorOffWhite"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>