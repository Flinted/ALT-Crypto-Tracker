<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/coin_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/coin_rank"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/coin_ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintLeft_toRightOf="@id/coin_name"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/coin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coin_rank"/>

        <TextView
            android:id="@+id/coin_stabilised_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintLeft_toRightOf="@id/coin_price"
            app:layout_constraintTop_toBottomOf="@id/coin_name"/>

        <TextView
            android:id="@+id/title_1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_list_row_title_1h"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/indicator_1h"
            app:layout_constraintEnd_toEndOf="@id/indicator_1h"
            />

        <ImageView
            android:id="@+id/indicator_1h"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_static_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/indicator_24h"
            app:layout_constraintTop_toBottomOf="@id/title_1h"/>

        <TextView
            android:id="@+id/coin_1h_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/indicator_1h"
            app:layout_constraintStart_toStartOf="@id/indicator_1h"
            app:layout_constraintTop_toBottomOf="@id/indicator_1h"/>

        <TextView
            android:id="@+id/title_24h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_list_row_title_24h"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/indicator_24h"
            app:layout_constraintEnd_toEndOf="@id/indicator_24h"
            />

        <ImageView
            android:id="@+id/indicator_24h"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_static_black_24dp"
            app:layout_constraintEnd_toStartOf="@id/indicator_7d"
            app:layout_constraintTop_toBottomOf="@id/title_24h"/>

        <TextView
            android:id="@+id/coin_24h_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/indicator_24h"
            app:layout_constraintStart_toStartOf="@id/indicator_24h"
            app:layout_constraintTop_toBottomOf="@id/indicator_24h"/>

        <TextView
            android:id="@+id/title_7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coin_list_row_title_7d"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/indicator_7d"
            app:layout_constraintEnd_toEndOf = "@id/indicator_7d"
            />
        <ImageView
            android:id="@+id/indicator_7d"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_static_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_7d"/>

        <TextView
            android:id="@+id/coin_7d_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/indicator_7d"
            app:layout_constraintStart_toStartOf="@id/indicator_7d"
            app:layout_constraintTop_toBottomOf="@id/indicator_7d"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
