<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/margin_xxLarge_20dp">

    <TextView
        android:id="@+id/DYOR_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large_8dp"
        android:background="@drawable/background_gradient_135"
        android:drawablePadding="@dimen/margin_large_8dp"
        android:drawableStart="@drawable/ic_google_24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/margin_small_4dp"
        android:text="Google it"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_large"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DYOR_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large_8dp"
        android:background="@drawable/background_gradient_135"
        android:drawablePadding="@dimen/margin_large_8dp"
        android:drawableStart="@drawable/ic_facebook_24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/margin_small_4dp"
        android:text="Facebook"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_large"
        app:layout_constraintTop_toBottomOf="@id/DYOR_google" />

    <TextView
        android:id="@+id/DYOR_github"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large_8dp"
        android:background="@drawable/background_gradient_135"
        android:drawablePadding="@dimen/margin_large_8dp"
        android:drawableStart="@drawable/ic_github_24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/margin_small_4dp"
        android:text="Github"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_large"
        app:layout_constraintTop_toBottomOf="@id/DYOR_facebook" />

    <TextView
        android:id="@+id/DYOR_coinmarketcap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large_8dp"
        android:background="@drawable/background_gradient_135"
        android:drawablePadding="@dimen/margin_large_8dp"
        android:drawableStart="@drawable/ic_coinmarketcap_24dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/margin_small_4dp"
        android:text="Coin Market Cap"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_large"
        app:layout_constraintTop_toBottomOf="@id/DYOR_github" />

</android.support.constraint.ConstraintLayout>