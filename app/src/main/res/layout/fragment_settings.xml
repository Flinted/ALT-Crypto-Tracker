<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="20dp">

    <TextView
        android:id="@+id/settings_default_sort_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large_8dp"
        android:text="Sort market by:"
        android:textColor="@color/colorOffWhite"
        app:layout_constraintBottom_toBottomOf="@id/settings_default_sort_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/settings_default_sort_selector" />

    <Spinner
        android:id="@+id/settings_default_sort_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large_8dp"
        android:background="@color/colorOffWhite"
        android:entries="@array/sort_options"
        android:padding="@dimen/margin_large_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/settings_default_sort_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_market_size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large_8dp"
        android:text="Market size:"
        android:textColor="@color/colorOffWhite"
        app:layout_constraintBottom_toBottomOf="@id/settings_market_size_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/settings_market_size_selector" />

    <makes.flint.alt.ui.settings.MarketSizeNumberPicker
        android:id="@+id/settings_market_size_selector"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin_large_8dp"
        android:layout_marginStart="@dimen/margin_large_8dp"
        android:background="@color/colorOffWhite"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/settings_market_size_title"
        app:layout_constraintTop_toBottomOf="@id/settings_default_sort_selector" />

</android.support.constraint.ConstraintLayout>

