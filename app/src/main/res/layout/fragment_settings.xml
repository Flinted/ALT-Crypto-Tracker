                    />

                <EditText
                    android:id="@+id/settings_tracker_up_2_input"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small_4dp"
                    android:background="@color/colorPrimarySoft"
                    android:inputType="numberDecimal"
                    app:layout_constraintBottom_toBottomOf="@id/settings_icon_up2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/settings_icon_up2"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorOffBlack"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_card_up1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_xLarge_16dp"
            android:layout_marginStart="@dimen/margin_xLarge_16dp"
            app:layout_constraintTop_toBottomOf="@id/settings_card_up2">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--UP Moderate-->
                <ImageView
                    android:id="@+id/settings_icon_up1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorOffWhite"
                    android:src="@drawable/ic_up_moderate_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <EditText
                    android:id="@+id/settings_market_up_1_input"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small_4dp"
                    android:background="@color/colorPrimarySoft"
                    android:inputType="numberDecimal"
                    app:layout_constraintBottom_toBottomOf="@id/settings_icon_up1"
                    app:layout_constraintStart_toEndOf="@id/settings_icon_up1"
                    app:layout_constraintTop_toTopOf="@id/settings_icon_up1"
                    />

                <EditText
                    android:id="@+id/settings_tracker_up_1_input"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
