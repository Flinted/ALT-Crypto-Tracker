<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimaryDark"
                                             android:padding="@dimen/margin_large_8dp">

    <TextView
        android:id="@+id/summary_current_value_USD_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current(USD): "
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summary_initial_value"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/summary_current_value_USD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toEndOf="@id/summary_current_value_USD_title"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/summary_current_value_BTC_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current(BTC): "
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summary_current_value_USD_title"
        />

    <TextView
        android:id="@+id/summary_current_value_BTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@id/summary_current_value_BTC_title"
        app:layout_constraintTop_toBottomOf="@id/summary_current_value_USD"
        />

    <TextView
        android:id="@+id/summary_initial_value_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial(USD): "
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summary_current_value_BTC_title"
        />

    <TextView
        android:id="@+id/summary_initial_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@id/summary_initial_value_title"
        app:layout_constraintTop_toBottomOf="@id/summary_current_value_BTC"
        />

    <TextView
        android:id="@+id/summary_change_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_xLarge_20sp"
        app:layout_constraintBottom_toBottomOf="@id/summary_initial_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>
